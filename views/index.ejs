<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar-expand-md navbar-dark bg-success">
        <div class="container">
            <div class="row">
            <a href="/" class="navbar-brand">
                
            </a>

            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar navbar-collapse" id="menu">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/" class="nav-link">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/create" class="nav-link">
                            create
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        </div>
    </nav>


    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3 class="display-3 text-success">Task Lists</h3>
            </div>
        </div>
        <div class="row">
            <% tasks.forEach((item,index) => {%>
                <div class="col-md-4 mt-2">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="text-header"><%=item.title %></h5>
                        </div>
                        <div class="card-body">
                            <ul class="listgroup-item">
                                <li class="list-group-item">
                                    <details>
                                        <summary>content</summary>
                                        <p class="text-justify"><%=item.content%></p>
                                    </details>
                                </li>

                                <li class="list-group-item">

                                    <strong class="text-success ">start date</strong>
                                    <span class="float-end badge bg-success"><%=item.start%></span>

                                </li>

                                <li class="list-group-item">
                                    
                                    <strong class="text-danger ">end date</strong>
                            <span class="float-end badge bg-danger"><%=item.end%></span>
                                
                            </li>
                            <li class="list-group-item">
                                    
                                <strong class="text-info ">created by</strong>
                        <span class="float-end badge bg-warning"><%=item.user %></span>
                            

                            </ul>
                        </div>
                    <div class="card-footer">
                        <a href="/edit/<%=item._id%>" class="btn btn-sm btn-outline-info">Edit</a>
                        <a href="/delete/<%=item._id%>" class="btn btn-sm btn-outline-danger float-end">delete</a>
                    </div>

                    </div>

                </div>
            <% })%>
     
        </div>
    </div>








    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>
</body>

</html>